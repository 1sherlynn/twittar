<%= form_for @reply, url: tweet_replies_path(tweet_id: @tweet), method: :post, remote: :true do |f| %>
         <div class="field col-xs-10 col-xs-offset-1" style="margin-left: 10px;">
         <%= f.text_field :body %>
         <span type="button"; margin-top: 3px;"><%= f.submit "Reply", class: "btn btn-primary" %></span>
      </div>
    <% end %>




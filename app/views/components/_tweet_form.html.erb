      <!-- TWEET FORM START-->
      <% if user_signed_in? %>
        <div class="panel panel-default post-form-panel">
          <div class="panel-body row">

            <div class="col-xs-1">
            <%= image_tag(current_user.avatar.thumb.url) if current_user.avatar?%> 
            </div>
            <div class="col-xs-11">
              <%= form_for(@newTweet) do |f| %>

                    <div class="field" style="margin-left: 10px;">
                      <%= f.text_field :tweet, autofocus: true, class: "form-control", placeholder: "What's happening?"%>
                      <span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "Tweet", class: "btn btn-primary" %></span>
                    </div>

              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <!-- TWEET form end-->
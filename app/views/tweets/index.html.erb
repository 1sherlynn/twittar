        <% for @tweet in @tweets %>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">

            <div class="col-xs-1">
            <%= user_avatar %>
            </div>
            <div class="col-xs-11">
              <p class="post-title"><span class="post-owner"><%= link_to User.find(@tweet.user_id).username, tweet_path(@tweet) %></a></span>
              <span class="post c-creation">- <%= @tweet.created_at.to_formatted_s(:short) %></span></p>
              <p class="post-content"><%= @tweet.tweet %></p>
            </div>

            <div class="col-sm-10 col-sm-offset-1">
              <p class="post-links">
                <a href="#"><span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span></a>

      <div id = "likes_section-<%=@tweet.id%>">
          <%= render "likes/like" %>
      </div>

    <%= form_for @reply, url: tweet_replies_path(tweet_id: @tweet), method: :post do |f| %>

      <div class="field col-xs-10 col-xs-offset-1" style="margin-left: 10px;">
         <%= f.text_field :body %>
         <span type="button" class="btn btn-submit"; margin-top: 3px;"><%= f.submit "Reply", class: "btn btn-primary" %></span>
      </div>

    <% end %>

    <div class="col-xs-11">
      <% @tweet.replies.each do |reply| %>
        <p><b><%= User.find(reply.user_id).username %>: </b>
        <%= reply.body %></p>
      <% end %>
    </div>



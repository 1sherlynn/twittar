<h1>Show page</h1>
<div class="row">
    <div class="col-xs-3">

        <div class="panel panel-default">
          <div class="panel-image hide-panel-body" align = "center">
            <%= user_avatar_profile %>
          </div>
          <div class="panel-footer">
            <div class="row">
                <div class="col-sm-10"><h4 style="text-align: center;"><%= User.find(@tweet.user_id).username %></h4></div>
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">TWEETS<br>
                    <h6 style="color: #0084B4; font-size: 200%;"><%= User.find(@tweet.user_id).tweets.count %></h6>
                  </div>
                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                    <h6 style="color: #0084B4; font-size: 200%;">100</h6>
                  </div>
                </div>
            </div>

          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-body">
             <h5 style="color: grey; font-size: 125%;">Trends for you</h5>
              <a href="#">#AlphaCampWeek6 </a><br>
                <p style="color: grey;">30k Tweets</p>
              <a href="#">#CodingBootcamp </a><br>
                <p style="color: grey;">20k Tweets</p>
              <a href="#">#TwitterClone</a><br>
                <p style="color: grey;">15k Tweets</p>
              <a href="#">#Halfway</a><br>
                <p style="color: grey;">15k Tweets</p>
          </div>
        </div>
    </div>
    <div class="col-xs-6">
     <!-- TWEET FORM START-->
      <% if user_signed_in? %>
        <div class="panel panel-default post-form-panel">
          <div class="panel-body row">

            <div class="col-xs-1">
              <%= user_avatar %>
            </div>
             <div class="col-xs-11">
              <%= form_for(@newTweet) do |f| %>

                    <div class="field" style="margin-left: 10px;">
                      <%= f.text_field :tweet, autofocus: true, class: "form-control", placeholder: "What's happening?"%>
                      <span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "Tweet", class: "btn btn-primary" %></span>
                    </div>

              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <!-- TWEET form end--><br><br>

        <% for @tweet in @tweets %>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">

            <div class="col-sm-1">
              <%= user_avatar %>
            </div>
            <div class="col-sm-11">
              <p class="post-title"><span class="post-owner"><%= User.find(@tweet.user_id).username %></a></span> <span class="post-creation">- <%= @tweet.created_at.to_formatted_s(:short) %></span></p>
              <p class="post-content"><%= @tweet.tweet %></p>
            </div>

            <div class="col-sm-12">
              <p class="post-links">
                <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
              
                <span> <div id = "likes_section-<%=@tweet.id%>">
                <%= render "likes/like" %> 
                </div></span>

                <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                <a href="">View Replies</a>

              </p>
            </div>

          </div>
        </div>
        <% end %>

        <div class="panel panel-default post-panel">
          <div class="panel-body row">
          </div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-body">
